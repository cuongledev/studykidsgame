<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_logo_game"
    android:orientation="vertical"
    tools:context=".ui.start.StartFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="26sp"
        android:gravity="center"
        android:text="Bài 31"
        android:textColor="#F44336"
        android:fontFamily="@font/montserrat_light" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:gravity="center"
        android:text="Phép cộng, phép trừ trong phạm vi 5, Dấu \u003E,\u003C,\u003D"
        android:textColor="#30336B"
        android:fontFamily="@font/montserrat_light"
        android:textAllCaps="true"/>


    <ImageView
        android:id="@+id/btn_play"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginTop="150dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:src="@drawable/start" />

    <ImageView
        android:id="@+id/btn_quit"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:src="@drawable/quit" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="26sp"
        android:gravity="center"
        android:text="Hướng dẫn"
        android:textColor="#F44336"
        android:fontFamily="@font/montserrat_light" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:gravity="center"
        android:fontFamily="@font/montserrat_light"
        android:text="1. Xem từng phép tính, phép so sánh ở phần trên."
        android:textColor="#30336B"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:gravity="center"
        android:fontFamily="@font/montserrat_light"
        android:text="2. Tìm ở hần dưới số hoặc dấu phù hợp để điền vào ô trống trong phép tính, phép so sánh đó.."
        android:textColor="#30336B"/>

</LinearLayout>